{
	"name": "esbuild-lazy-analyzer",
	"version": "1.3.0",
	"description": "An esbuild visualizer that analyzes lazy-loading of chunks",
	"main": "dist/main.js",
	"bin": {
		"esbuild-lazy-analyzer": "dist/main.js"
	},
	"files": [
		"dist/main.js"
	],
	"scripts": {
		"start": "npm run package && node dist/main.js --metafile ./profile/meta.json --outreport ./profile/lazy-analyzer.html && open ./profile/lazy-analyzer.html",
		"dev": "concurrently \"npm run build\" \"nodemon --watch dist --enable-source-maps dist/main.js --metafile ./profile/meta.json --outmeta ./profile/lazy-analyzer.json --outreport ./profile/lazy-analyzer.html\" \"open ./profile/lazy-analyzer.html\"",
		"build": "node esbuild.mjs --watch",
		"package": "rm -rf dist && node esbuild.mjs --production",
		"profile": "node esbuild.mjs && esbuild-visualizer --metadata ./profile/meta.json --filename ./profile/visualizer.html && open ./profile/visualizer.html",
		"lint": "eslint src && tsc --noEmit",
		"prepare": "husky"
	},
	"keywords": [],
	"author": "Alex Dombroski",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alexanderdombroski/esbuild-lazy-analyzer.git"
	},
	"type": "module",
	"devDependencies": {
		"@types/d3": "^7.4.3",
		"@types/node": "^25.0.1",
		"@typescript-eslint/eslint-plugin": "^8.49.0",
		"@typescript-eslint/parser": "^8.49.0",
		"chart.js": "^4.5.1",
		"concurrently": "^9.2.1",
		"cssnano": "^7.1.2",
		"esbuild": "^0.27.1",
		"esbuild-visualizer": "^0.7.0",
		"eslint": "^9.39.2",
		"eslint-plugin-import": "^2.32.0",
		"htmlnano": "^2.1.5",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"nodemon": "^3.1.11",
		"prettier": "^3.7.4"
	}
}
