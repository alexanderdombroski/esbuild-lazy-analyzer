{
	"compilerOptions": {
		"target": "ES2020",
		"module": "none", // treat files as non-modules (like <script> tags)
		"allowJs": true, // include JS files
		"checkJs": true, // check JS files
		"noImplicitAny": false,
		"lib": ["ES2020", "DOM"], // browser APIs + modern JS
		"moduleResolution": "classic", // how browser script resolution works
		"noEmit": true, // not compiling output
		"strict": true,
		"typeRoots": ["src/types", "node_modules/@types"]
	},
	"include": ["src/**/*.js", "src/**/*.d.ts"]
}
