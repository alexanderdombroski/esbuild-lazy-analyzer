{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"allowJs": true, // include JS files
		"checkJs": true, // check JS files
		"noImplicitAny": false,
		"lib": ["ES2020", "DOM"], // browser APIs + modern JS
		"noEmit": true, // not compiling output
		"strict": true,
		"typeRoots": ["src/types", "node_modules/@types"]
	},
	"include": ["src/**/*.js", "src/**/*.d.ts", "src/**/*.mjs"]
}
